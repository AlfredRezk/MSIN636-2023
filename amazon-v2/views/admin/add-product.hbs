<form action="/admin/add-product" class="p-4 bg-dark card shadow" method="POST">

  <h1 class="text-light text-center my-2"> ADD PRODUCT</h1>
  <input
    type="text"
    class="form-control mb-3"
    name="title"
    placeholder="Product Title"
  />
  <input
    type="text"
    class="form-control mb-3"
    name="imageUrl"
    placeholder="Product Image"
  />
  <input
    type="number"
    class="form-control mb-3"
    name="price"
    placeholder="Product Price"
  />

  <textarea name="desc"></textarea>

  <div class="text-center">
    <button type="submit" class="btn btn-warning mt-3"> ADD </button>
  </div>
</form>

