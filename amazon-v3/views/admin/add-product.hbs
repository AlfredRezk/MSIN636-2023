<form action="/admin/{{#if editMode}}edit-product{{else}}add-product{{/if}}" 

   class="p-4 {{#if editMode}} bg-light {{else}}bg-dark{{/if}} card shadow" method="POST">

  <h1 class="{{#if editMode}} text-dark {{else}}text-light{{/if}} text-center my-2"> 
    {{#if editMode}} EDIT {{else}}ADD {{/if}}PRODUCT
    </h1>
  <input
    type="text"
    class="form-control mb-3"
    name="title"
    placeholder="Product Title"
    value="{{product.title}}"
  />
  <input
    type="text"
    class="form-control mb-3"
    name="imageUrl"
    placeholder="Product Image"
    value="{{product.imageUrl}}"
  />
  <input
    type="number"
    class="form-control mb-3"
    name="price"
    placeholder="Product Price"
    value="{{product.price}}"
  />

  <textarea name="desc">
      {{#if editMode}} {{product.desc}} {{/if}}
  </textarea>


  {{#if editMode}}
  <input type="hidden" value="{{product.id}}" name="id">
  {{/if}}

  <div class="text-center">
    <button type="submit" class="btn btn-warning mt-3"> {{#if editMode}} EDIT {{else}}ADD {{/if}} </button>
  </div>
</form>



