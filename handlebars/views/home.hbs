<h1>Home Page</h1>
{{#if loggedIn}}
<h2> Welcome Back</h2>
{{else}}
<h2> Sign In</h2>
{{/if}}


<div class="row">
{{#each users}}
<div class="col-md-6 col-lg-4 col-xl-3">
    <div class="card">
        <img src="https://randomuser.me/api/portraits/{{img}}" class="card-img-top" >
        <div class="card-body">
            <h5 class="card-title">{{name}}</h5>
            <p class="card-text">{{title}}</p>
            <a href="#" class="btn btn-primary">View More</a>
        </div>
    </div>
</div>
{{else}}
<h2> No Users</h2>
{{/each}}
</div>
